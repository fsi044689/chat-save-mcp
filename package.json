{
  "name": "mcp-history-store",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "mcp-history-store": "dist/index.js"
  },
  "scripts": {
    "dev": "node dist/index.js --stdio",
    "start": "node dist/index.js --stdio",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --banner:js='#!/usr/bin/env node' --outfile=dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --max-warnings=0 .",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
